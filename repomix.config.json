{
  "$schema": "https://repomix.com/schemas/latest/schema.json",
  "output": {
    "filePath": "repomix-output.xml",
    "style": "xml",
    "removeComments": false,
    "removeEmptyLines": false,
    "showLineNumbers": false,
    "topFilesLength": 20
  },
  "include": [
    "src/**/*.rs",
    "samples/**/*.rhai",
    "Cargo.toml",
      "docs/**/*.md",
      "tests/**/*.rs",
      "tests/**/*.rhai",
  ],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "target/",
      "web/themes/",
      "web/static/",
      "web/sass/",
      "docs/generated/",
      "*.png",
      "*.jpg",
      "*.pdf",
      "*.ico",
      "*.css",
      "*.scss"
    ]
  }
}
