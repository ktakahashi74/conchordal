{
  "$schema": "https://repomix.com/schemas/latest/schema.json",
  "output": {
    "filePath": "context.xml",
    "style": "xml",
    "removeComments": false,
    "removeEmptyLines": false,
    "showLineNumbers": false,
    "topFilesLength": 20
  },
  "include": [
    "Cargo.toml",
    "Cargo.lock",
    "src/**/*.rs",
    "tests/**/*.rs",
    "*.md",
    "scripts/**/*.sh",
    "samples/**/*.rhai"
  ],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "target/",
      "docs/",
      ".git/",
      "**/*.wav",
      "**/*.png",
      "**/*.jpg",
      "context.xml",
      "context-*.xml",
      "diff.patch",
      "diff-*.patch",
      "sync_report.md",
      ".driver_prompt.md"
    ]
  }
}
